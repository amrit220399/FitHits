<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mic_fit"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".PlayMusicActivity">
    <TextView
        android:id="@+id/musicname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-condensed"
        android:foregroundTint="#EAE7CB"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Music"
        android:textColor="@color/colorWhite"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.75"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-condensed"
        android:foregroundTint="#EAE7CB"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Music"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cover"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        app:civ_border_color="#000000"
        app:civ_border_width="2dp"
        tools:src="@drawable/profile"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_weight="1"
        android:gravity="start"
        android:text="0:00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:text="0:00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorWhite" />
</LinearLayout>


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/stop"
        android:layout_width="15dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        tools:srcCompat="@drawable/ic_stop_black_24dp" />
    <ImageView
        android:id="@+id/previous"
        android:layout_width="15dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        tools:srcCompat="@drawable/ic_skip_previous_black_24dp" />


    <ImageView
        android:id="@+id/play"
        android:layout_width="25dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        tools:srcCompat="@drawable/ic_play_arrow_black_24dp" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="15dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        tools:srcCompat="@drawable/ic_skip_next_black_24dp" />

    <ImageView
        android:id="@+id/pause"
        android:layout_width="15dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        tools:srcCompat="@drawable/ic_pause_black_24dp" />

    </LinearLayout>
</LinearLayout>